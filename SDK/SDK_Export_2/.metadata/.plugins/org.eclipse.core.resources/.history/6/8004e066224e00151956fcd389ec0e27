/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_io.h"
#include "xparameters.h"

int memory_data[40] = {
0x04030301,
0x07030301,
0x08040804,
0x0a050205,
0x04030306,
0x05030308,
0x02030500,
0x01030701,
0x07030902,
0x08030206,
0x04030301,
0x07030301,
0x08040804,
0x0a050205,
0x04030306,
0x05030308,
0x02030500,
0x01030701,
0x07030902,
0x08030206,
0x04030301,
0x07030301,
0x08040804,
0x0a050205,
0x04030306,
0x05030308,
0x02030500,
0x01030701,
0x07030902,
0x08030206,
0x04030301,
0x07030301,
0x08040804,
0x0a050205,
0x04030306,
0x05030308,
0x02030500,
0x01030701,
0x07030902,
0x08030206};

u64 inst_data[10] = {
	0x000000032006100a,
	0x00000006200D1014,
	0x000000032006100a,
	0x00000006200D1014,
	0x000000032006100a,
	0x00000006200D1014,
	0x000000032006100a,
	0x00000006200D1014,
	0x000000032006100a,
	0x00000006200D1014
};

int main()
{
    init_platform();

    u32 *memory_addr, *result_addr;
    int complete;
    u32 timer;
    complete = Xil_In32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+203*4);
    xil_printf("complete %x \n",complete);

    memory_addr = (u32 *) XPAR_AXI_BRAM_CTRL_0_S_AXI_BASEADDR;
    result_addr = (u32 *) XPAR_AXI_BRAM_CTRL_1_S_AXI_BASEADDR;
    int i;
    for (i = 0; i < 40; i++){
    	memory_addr[i] = memory_data[i];
    	xil_printf("memory_addr[%d] = %x \n",i, memory_addr[i]);
    }

    for (i = 0; i < 10; i++){
    	Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+4*2*i, (int) (inst_data[i] && 0xffffffff));
    	Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+4*2*i + 4, (int) ((inst_data[i] >> 32) && 0xffffffff));
    }

    Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+200*4, 0x1);


    Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+204*4, 0x1);
    Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+204*4, 0x0);

    Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+201*4, 0x1);

    complete = Xil_In32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+203*4);
    xil_printf("complete %x \n",complete);

    timer = Xil_In32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+202*4);
    xil_printf("timer %d \n",timer);
    while (complete == 0){
    	complete = Xil_In32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+203*4);
    	xil_printf("complete %x \n",complete);
    	timer = Xil_In32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+202*4);
    	xil_printf("timer %d \n",timer);
        Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+204*4, 0x1);
        Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+204*4, 0x0);
    }
    xil_printf("complete %x \n",complete);
    xil_printf("result_addr %x \n", *(result_addr+1));

    Xil_Out32(XPAR_MOORE_VOTING_IP_0_S_AXI_BASEADDR+201*4, 0x0);
    print("Hello World\n\r");

    return 0;
}
